@{
  Layout = "_Layout";
}
<div class="container">
  <h1>To Do List</h1>
</div>
  <h2>Edit category: @Model.GetDescription()</h2>
  <form action="/items/@Model.GetId()/update" method="post">
      <label for="name">Name:</label>
      <input type="text" name="new-name" id="new-name" value="@Model.GetDescription()">
      <button type="submit">Edit</button>
  </form>
  <h4><a href="/items">Return home</a></h4>
</div>
