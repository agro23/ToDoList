@{
  Layout = "_Layout";
}
<div class="container">
  <div class="well row">
    <h1>To Do List</h1>
  </div>
  <div class="well">
    <div class="row">
      <div class="col-lg-4">
        <h3><a href="/date/asc">DATE</a></h3>
      </div>
      <div class="col-lg-4">
        <h3>ITEM</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4">
        @if(@Model.Count > 0)
        {
          <ol>
            @foreach (var item in Model)
            {
              <h4>@item.GetDate()</h4>
            }
          </ol>
        }
      </div>
      <div class="col-lg-4">
        @if(@Model.Count > 0)
        {
          <ol>
            @foreach (var item in Model)
            {
              <h4> @item.GetDescription() </h4>
            }
          </ol>
        }
      </div>
    </div>
  </div>
</div>

