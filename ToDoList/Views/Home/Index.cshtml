@{
  Layout = "_Layout";
}
<div class="container">
  <div class="well row">
    <h1>To Do List</h1>
  </div>
  <div class="well">
    <div class="row">
      <div class="col-lg-4">
        <h3><a href="/date/desc">DATE</a></h3>
      </div>
      <div class="col-lg-4">
        <h3>ITEM</h3>
      </div>

      <div class="col-lg-3">
        <h3>ACTION</h3>
      </div>

    </div>

    <div class="row">
      <div class="col-lg-4">
        @if(@Model.Count > 0)
        {
          <ol>
            @foreach (var item in Model)
            {
              <h4>@item.GetDate()</h4>
            }
          </ol>
        }
      </div>
      <div class="col-lg-4">
        @if(@Model.Count > 0)
        {
          <ol>
            @foreach (var item in Model)
            {
              <h4> @item.GetDescription()</h4>
            }
          </ol>
        }
      </div>

      <div class="col-lg-3">
        @if(@Model.Count > 0)
        {
          <ol>
            @foreach (var item in Model)
            {
              <h4><a href="/items/@item.GetId()/update">Edit</a> | <a href="/items/@item.GetId()/delete">Delete</a></h4>
            }
          </ol>
        }
      </div>
    </div>
      <div class="row">
        <div class="col-lg-4">

        </div>
        <div class="col-lg-4">
          <!-- <h3><a href='/categories'>View categories</a></h3>
          <h3><a href='/categories/new'>Add a new category</a></h3> -->
          <!-- <p><a href="">Add new item</a></p> -->
          <form action="/items/new" method="get">
            <button type="submit" name="button">Add Items</button>
          </form>
        </div>
        <div class="col-lg-3">
          <form action="/items/delete" method="post">
            <button type="submit" name="button">Clear All Items</button>
          </form>
        </div>
      </div>

  </div>
</div>
